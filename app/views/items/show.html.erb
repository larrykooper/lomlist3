<br/>

<%= form_tag('/items/new_next', :method => "post") do %>
  <%= submit_tag 'New Next Item' %>
<% end %>

<br/>
<%= link_to 'New item with any number', :action => 'new' %><br/><br/>

<%= form_tag('/items/edit_by_number/', :method => "get") do %>
  Enter a number to edit:
  <%= text_field_tag(:number, params[:number], :size => 5)%>
  <%= submit_tag 'Edit' %>
<% end %>

<p>
  <b>Create date:</b>
  <%= @item.create_date.strftime("%m/%d/%y") %>
</p>

<p>
  <b>Number:</b>
  <%= @item.number %>
</p>

<p>
  <b>Act type:</b>
  <%= @item.act_type %>
</p>

<p>
  <b>Item desc:</b>
  <%= safe_item_desc(@item) %>
</p>

<b>Tags:</b>
<span class="tagcl">
  <% @item.tags.each do |t| %>   
	  <%= t.name%>
  <% end %>
</span>

<p>
  <b>Value when done:</b>
  <%= @item.value_when_done %>
</p>

<%= link_to 'Edit', "/items/#{@item.number}/edit" %> |
<%= link_to 'Back', items_path %>