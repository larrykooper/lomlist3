<label>Tags:</label>    
<div id="mydiv"> 
  <%= text_field_tag "tag_list", @tags_to_display %>
</div>  
<b>your tags:</b><br>

<% @labels = Tag.used_tags %>
  <% for label in @labels %>
    <span class="tag">
      <%= label.name %>
    </span> 
    &nbsp;    
  <% end %>
<br><br>  
<%= submit_tag 'Save' %>  